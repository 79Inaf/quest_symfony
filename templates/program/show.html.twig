{% extends 'base.html.twig' %}

{% block title %}Show serie
{% endblock %}


{% block body %}
	<div class="media">
		<img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster"/>
		<div class="media-body">
			<h1 class="mt-0 text-primary">{{ program.title}}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
			<p>
				{% for season in seasons %}
					<li>
						<a href="{{ path("program_season_show", {program: program.id, season: season.id}) }} ">
							Saison
							{{ season.number }}
						</a>
					</li>
				{% endfor %}
			</p>
		</p>
	</div>
	<a href="{{ path('program_index') }}">Retour à la liste des séries</a>
</div>{% endblock %}
