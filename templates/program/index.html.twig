{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}


{% block body %}

	<h1 class="text-center text-primary">Toutes les séries de la table program :</h1>
	<a href="{{ path("program_new") }}">Ajouter une série</a>
	<div class="container-fluid mt-4">
		<div class="row">
			{% for program in programs %}
				<div class="d-flex justify-content-center mb-4 p-2 col-md-6 col-xxl-4">
					<div class="d-flex p-2 card bg-success">
						<h5 class="card_header text-info">
							{{ loop.index }}
							/
							{{ program.title }}
						</h5>
						<img class="card-img-top" src="{{ program.poster }}" alt="{{ program.poster }}"/>
						<div class="card-body">
							<h6 class="card-title">
								catégorie :
								{{ program.category.name }}</h6>

							<p class="card-text">{{ program.synopsis }}</p>
							<a class="btn-primary" href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
						</div>
					</div>
				</div>
			{% else %}
				Aucune série trouvée.
			{% endfor %}
		</div>
	</div>

	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>


{% endblock %}
