{% extends 'base.html.twig' %}

{% block title %}Show One episode
{% endblock %}


{% block body %}
	<div class="media">
		<img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster"/>
		<div class="media-body">
			<h1 class="mt-0 text-primary">{{ program.title}}</h1>
			<h2>saison
				{{ season.number }}
			</h2>
			<h3>détail de l'épisode n°{{ episode.number}}:</h3>
			<p>titre :
				{{ episode.title}}</p>
			<p>résumé :
				{{ episode.synopsis }}</p>

		</div>
		<a href="{{ path("program_season_show", {program: program.id, season: season.id}) }}">Retour à la liste des saisons</a>
	</div>

{% endblock %}
