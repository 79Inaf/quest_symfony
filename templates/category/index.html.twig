{% extends 'base.html.twig' %}

{% block title %}Liste des catégories
{% endblock %}

{% block body %}
	<div>
		<h1 class="text-primary">Liste des catégories</h1>
		<ul>
			{% for category in categories %}
				<a href="{{ path("category_show", { categoryName: category.name }) }}">
					<li>{{ category.name }}</li>
				</a>
			{% endfor %}
		</ul>
		<a class="text-info" href="{{path('category_new')}}">Ajouter une catégorie</a>
	</div>
{% endblock %}
