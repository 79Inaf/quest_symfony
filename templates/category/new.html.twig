{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}séries par catégorie
{% endblock %}

{% block body %}


	<h1 class="text-primary">
		formulaire de création de catégorie
	</h1>
	<div>
		{{ form_start(form) }}
		<div class="row">
			<div class="col-4">
				{{ form_widget(form) }}
			</div>

		</div>
		<button class="btn btn-primary mb-3" type="submit">Ajouter une catégorie</button>

		{{ form_end(form) }}
	</div>
	<div>
		<a href="{{path('category_index')}}">Revenir à la liste des catégories</a>
	</div>
{% endblock %}
